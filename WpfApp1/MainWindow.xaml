<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Boter-kaas-en-eieren" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Button Name="btnRightMid" Grid.Column="2" Grid.Row="1" Click="btnRightMid_Click_1" >
            <Image Name="imgRightMid" Grid.Column="2" Grid.Row="1" Source="x.jpg" Stretch="Fill" Visibility="Hidden"/>
        </Button>
        <Image Name="imgRightMid2" Grid.Column="2" Grid.Row="1" Source="circle.jpg" Stretch="Fill" Visibility="Hidden"/>
        <Button Name="btnTopMid"  Grid.Column="1" Grid.Row="0" Click="btnTopMid_Click" >
            <Image Name="imgTopMid"  Grid.Column="1" Grid.Row="0" Source="x.jpg" Stretch="Fill" Visibility="Hidden"/>
        </Button>
        <Image Name="imgTopMid2"  Grid.Column="1" Grid.Row="0" Source="circle.jpg" Stretch="Fill" Visibility="Hidden"/>
        <Button Name="btnTopRight"  Grid.Column="2" Grid.Row="0" Click="btnTopRight_Click" >
            <Image Name="imgTopRight"   Grid.Column="2" Grid.Row="0" Source="x.jpg" Stretch="Fill" Visibility="Hidden"/>
        </Button>
        <Image Name="imgTopRight2"   Grid.Column="2" Grid.Row="0" Source="circle.jpg" Stretch="Fill" Visibility="Hidden"/>
        <Button Name="btnTopLeft"  Grid.Column="0" Grid.Row="0" Click="btnTopLeft_Click" >
            <Image Name="imgTopLeft"  Grid.Column="0" Grid.Row="0" Source="x.jpg" Stretch="Fill" Visibility="Hidden"/>
        </Button>
        <Image Name="imgTopLeft2"  Grid.Column="0" Grid.Row="0" Source="circle.jpg" Stretch="Fill" Visibility="Hidden"/>
        <Button Name="btnMidMid"  Grid.Column="1" Grid.Row="1" Click="btnMidMid_Click" >
            <Image Name="imgMidMid" Grid.Column="1" Grid.Row="1" Source="x.jpg" Stretch="Fill" Visibility="Hidden" />
        </Button>
        <Image Name="imgMidMid2" Grid.Column="1" Grid.Row="1" Source="circle.jpg" Stretch="Fill" Visibility="Hidden" />
        <Button Name="btnBotRight"  Grid.Column="2" Grid.Row="2" Click="btnBotRight_Click"  >
            <Image Name="imgbotRight"  Grid.Column="2" Grid.Row="2" Source="x.jpg" Stretch="Fill" Visibility="Hidden" />
        </Button>
        <Image Name="imgbotRight2"  Grid.Column="2" Grid.Row="2" Source="circle.jpg" Stretch="Fill" Visibility="Hidden" />
        <Button Name="btnLeftMid"  Grid.Column="0" Grid.Row="1" Click="btnLeftMid_Click"  >
            <Image Name="imgLeftMid"  Grid.Column="0" Grid.Row="1" Source="x.jpg" Stretch="Fill" Visibility="Hidden" />
        </Button>
        <Image Name="imgLeftMid2"  Grid.Column="0" Grid.Row="1" Source="circle.jpg" Stretch="Fill" Visibility="Hidden" />
        <Button Name="btnBotLeft"  Grid.Column="0" Grid.Row="2" Click="btnBotLeft_Click"  >
            <Image Name="imgBotLeft"  Grid.Column="0" Grid.Row="2" Source="x.jpg" Stretch="Fill" Visibility="Hidden" />
        </Button>
        <Image Name="imgBotLeft2"  Grid.Column="0" Grid.Row="2" Source="circle.jpg" Stretch="Fill" Visibility="Hidden" />
        <Button Name="btnBotMid"  Grid.Column="1" Grid.Row="2" Click="btnBotMid_Click"  >
            <Image Name="imgBotMid"  Grid.Column="1" Grid.Row="2" Source="x.jpg" Stretch="Fill" Visibility="Hidden" />
        </Button>
        <Image Name="imgBotMid2"  Grid.Column="1" Grid.Row="2" Source="circle.jpg" Stretch="Fill" Visibility="Hidden" />
        <Label Name="lblPlayer" Content="Player VS AI" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="200" FontSize="20" Background="Red" />
        <Label Name="lblPlayer2" Content="Player 2" Grid.Column="4" Grid.Row="0" VerticalAlignment="Top" Width="200" FontSize="20" Background="Red" Visibility="Hidden"/>
        <Label Name="lblWin" Content="You&#xD;&#xA;Won!" Grid.Column="2" HorizontalAlignment="Left" Margin="227,94,-126,0" Grid.Row="1" VerticalAlignment="Top" Width="100" FontSize="36" Height="106" Visibility="Hidden"/>
        <Button Name="btnRestart" Content="Restart" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="100"   Width="200"  Click="btnRestart_Click" Background="#FF36ADFF"/>
        <Label Name="lblWin2" Content="AI&#xD;&#xA;Won!" Grid.Column="2" HorizontalAlignment="Left" Margin="227,94,-126,0" Grid.Row="1" VerticalAlignment="Top" Width="100" FontSize="36" Height="106" Visibility="Hidden"/>
        <Button Name="btnAI" Content="AI" Grid.Column="4" Grid.Row="0" VerticalAlignment="Bottom" Width="200" Height="100" Click="bntAI_Click" Background="Green" />
    </Grid>
</Window>
